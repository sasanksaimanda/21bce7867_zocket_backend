{
    "info": {
        "name": "Task Management API",
        "description": "API collection for testing authentication, task management, AI-based task suggestions, and real-time updates.",
        "version": "1.0"
    },
    "item": [
        {
            "name": "Auth",
            "item": [
                {
                    "name": "User Login",
                    "request": {
                        "method": "POST",
                        "header": [{ "key": "Content-Type", "value": "application/json" }],
                        "url": "{{base_url}}/auth/login",
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"email\": \"user@example.com\",\n    \"password\": \"securepassword\"\n}"
                        }
                    }
                },
                {
                    "name": "User Registration",
                    "request": {
                        "method": "POST",
                        "header": [{ "key": "Content-Type", "value": "application/json" }],
                        "url": "{{base_url}}/auth/register",
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"email\": \"newuser@example.com\",\n    \"password\": \"securepassword\"\n}"
                        }
                    }
                }
            ]
        },
        {
            "name": "Tasks",
            "item": [
                {
                    "name": "Get All Tasks",
                    "request": {
                        "method": "GET",
                        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
                        "url": "{{base_url}}/tasks"
                    }
                },
                {
                    "name": "Create a Task",
                    "request": {
                        "method": "POST",
                        "header": [
                            { "key": "Content-Type", "value": "application/json" },
                            { "key": "Authorization", "value": "Bearer {{token}}" }
                        ],
                        "url": "{{base_url}}/tasks/create",
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"title\": \"Build Task Manager\",\n  \"description\": \"Create a Flask-based task management system\",\n  \"assigned_to\": \"john_doe\"\n}"
                        }
                    }
                },
                {
                    "name": "Update a Task",
                    "request": {
                        "method": "PUT",
                        "header": [
                            { "key": "Content-Type", "value": "application/json" },
                            { "key": "Authorization", "value": "Bearer {{token}}" }
                        ],
                        "url": "{{base_url}}/tasks/update/123",
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"title\": \"Updated Task Name\",\n  \"description\": \"Updated description\",\n  \"status\": \"completed\"\n}"
                        }
                    }
                },
                {
                    "name": "Delete a Task",
                    "request": {
                        "method": "DELETE",
                        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
                        "url": "{{base_url}}/tasks/delete/123"
                    }
                }
            ]
        },
        {
            "name": "AI Suggestions",
            "item": [
                {
                    "name": "Get AI Task Suggestions",
                    "request": {
                        "method": "POST",
                        "header": [
                            { "key": "Content-Type", "value": "application/json" },
                            { "key": "Authorization", "value": "Bearer {{token}}" }
                        ],
                        "url": "{{base_url}}/ai/suggestions",
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"task_category\": \"development\",\n  \"user_skills\": [\"Python\", \"Flask\", \"MongoDB\"]\n}"
                        }
                    }
                }
            ]
        },
        {
            "name": "Real-Time Updates",
            "item": [
                {
                    "name": "Connect WebSocket",
                    "request": {
                        "method": "GET",
                        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
                        "url": "{{base_url}}/realtime/connect"
                    }
                }
            ]
        }
    ],
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:5000"
        },
        {
            "key": "token",
            "value": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJ1c2VyX2lkIjoiNjdiNzRhYTQ1NjA1M2M1NGUxMzM3MTc0IiwiZXhwIjoxNzQwMDcxMjEyfQ.Gc-EgryvT3wzrQhofXwQU3nyDkyLmcEkwRWg6Oyhbck"
        }
    ]
}
